}

<div>
    <a class="logo logo-alternativo" href='@Url.Action("Index")'>
        <img src="/img/Logo-StayCo.jpg" alt="logo">
        <h1>Stay-Co</h1>
    </a>
</div>

<main class="main__top-margin">
    <div id="login-cantainer">
        <h2>Olvide mi contrase単a</h2>
        @if(ViewBag.idUser == -1) {
            <form method="post" action='@Url.Action("VerificarExsistenciaUsuario")'>
                <div class="label-input">
                    <label class="" for="userInput" class="form-label">Usuario</label>
                    <input class="larger-inputs" name="idUsuario" autocomplete="off" type="text" class="form-control" placeholder="myAwesomeUser" id="userInput" name="user" required>
                </div>
                <button class="btn-1" type="submit" style="margin-top: 15px;">Obtener contrase単a</button>
            </form>
        } else {
            <form method="post" action='@Url.Action("VerificarExsistenciaUsuario")'>
                <div class="label-input">
                    <label class="" for="userInput" class="form-label">Responda esta pregunta</label>
                    <input class="larger-inputs" name="idUsuario" autocomplete="off" type="text" class="form-control" placeholder="myAwesomeUser" id="userInput" name="user" required>
                </div>
                <button class="btn-1" type="submit" style="margin-top: 15px;">Obtener contrase単a</button>
            </form>
        }

    </div>
</main>