@{
    ViewData["Title"] = "Comunidades";
}

<link rel="stylesheet" href="~/css/menuRegularStyle.css" asp-append-version="true"/>
<link rel="stylesheet" href="~/css/comunidadesStyle.css">

<!-- Comunidades -->

<header>
    <nav>
        <div class="logo">
            <img src="/img/Logo-StayCo.jpg" alt="logo">
            <h1>Stay-Co</h1>
        </div>
        <ul>
            <li><a href='@Url.Action("Comunidades", new {id = ViewBag.Usuario.ID_Usuario})'>Comunidades</a></li>
            <li><a href='@Url.Action("Explorar", new {id = ViewBag.Usuario.ID_Usuario})'>Explorar</a></li>
            <li><a href='@Url.Action("Perfil", new {id = ViewBag.Usuario.ID_Usuario})'>Perfil</a></li>
        </ul>
        <div class="toggle_btn">
            <i class="fa-solid fa-bars" style="color: #ffffff;"></i>
        </div>
    </nav>

    <div class="menu-desplegado">
        <li><a href='@Url.Action("Comunidades", new {id = ViewBag.Usuario.ID_Usuario})'>Comunidades</a></li>
        <li><a href='@Url.Action("Explorar", new {id = ViewBag.Usuario.ID_Usuario})'>Explorar</a></li>
        <li><a href='@Url.Action("Perfil", new {id = ViewBag.Usuario.ID_Usuario})'>Perfil</a></li>
    </div>
</header>

<div class="mis-comunidades">
    @if(ViewBag.ComunidadesPertenecientes.Count > 0){
        <h1>Tus comunidades, @ViewBag.Usuario.Username</h1>

        @foreach(var item in ViewBag.ComunidadesPertenecientes){
            <form action='@Url.Action("Comunidad", new {id = ViewBag.Usuario.ID_Usuario})' method="post">
                <input type="hidden" name="idComunidad" value="@item.ID_Comunidad" >
                <input type="submit" value="@item.Nombre">
            </form>
        }
    }
    else{
        <h1>Empezá a unirte a comunidades.</h1>
    }

</div>

<div class="contenedor-carrousel">
    <h2><i>Más populares</i></h2>
    @* carrousel *@
</div>

<div class="contenedor-carrousel">
    <h2><i>Otras comunidades</i></h2>
    @* carrousel *@
    <div class="media-container">
        <div class="media-scroller">

            <!-- Pagina 1 -->
            <div class="media-group" id="group-1">
                @for(int i = 0; i < 4; i++){
                    <div class="media-element">
                        <p>@ViewBag.TodasComunidades[i].Nombre</p>
                    </div>
                }
                <a class="next" href="#group-2" aria-label="next">
                    <svg>
                        <use href="#next"></use>
                    </svg>
                </a>
            </div>

            <!-- Pagina 2   -->
            <div class="media-group" id="group-2">
                <a class="previous" href="#group-1">
                    <svg>
                        <use href="#previous"></use>
                    </svg>
                </a>
                    @for(int i = 4; i < 8; i++){
                        <div class="media-element">
                            <p>@ViewBag.TodasComunidades[i].Nombre</p>
                        </div>
                    }
                <a class="next" href="#group-3" aria-label="next">
                    <svg>
                        <use href="#next"></use>
                    </svg>
                </a>
            </div>

            <!-- Pagina 3   -->
            <div class="media-group" id="group-3">
                <a class="previous" href="#group-2">
                    <svg>
                        <use href="#previous"></use>
                    </svg>
                </a>
                @for(int i = 8; i < 12; i++){
                        <div class="media-element">
                            <p>@ViewBag.TodasComunidades[i].Nombre</p>
                        </div>
                    }
                <a class="next" href="#group-4" aria-label="next">
                    <svg>
                        <use href="#next"></use>
                    </svg>
                </a>
            </div>

            <!--  Pagina 4  -->
            <div class="media-group" id="group-4">
                <a class="previous" href="#group-3">
                    <svg>
                        <use href="#previous"></use>
                    </svg>
                </a>
                @for(int i = 12; i < 16; i++){
                    <div class="media-element">
                        <p>@ViewBag.TodasComunidades[i].Nombre</p>
                    </div>
                }
            </div>

            <!-- Pagination Indicators -->
            <div class="navigation-indicators">
                <!-- 4 Groups -->
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
    </div>
</div>

<!-- Navigation Icons -->
<svg>
  <symbol id="next" viewBox="0 0 256 512">
    <path fill="white"
      d="M224.3 273l-136 136c-9.4 9.4-24.6 9.4-33.9 0l-22.6-22.6c-9.4-9.4-9.4-24.6 0-33.9l96.4-96.4-96.4-96.4c-9.4-9.4-9.4-24.6 0-33.9L54.3 103c9.4-9.4 24.6-9.4 33.9 0l136 136c9.5 9.4 9.5 24.6.1 34z" />
  </symbol>
  <symbol id="previous" viewBox="0 0 256 512">
    <path fill="white"
      d="M31.7 239l136-136c9.4-9.4 24.6-9.4 33.9 0l22.6 22.6c9.4 9.4 9.4 24.6 0 33.9L127.9 256l96.4 96.4c9.4 9.4 9.4 24.6 0 33.9L201.7 409c-9.4 9.4-24.6 9.4-33.9 0l-136-136c-9.5-9.4-9.5-24.6-.1-34z" />
  </symbol>
</svg>


<script src="~/js/menu.js" asp-append-version="true"></script>