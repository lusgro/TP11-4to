            <img src="@item.FotoPortada" alt="">
            <p>@item.Nombre</p>
            <p style="font-weight: 400;">@item.AÃ±o</p>
        </button>
    }
</div>

<section class="modal">
    <div class="modal__container">
        <img src="images/modal.svg" class="modal__img">
        <h2 class="modal__title"></h2>
        <div class="modal__paragraph">
            <div id="Canciones"></div>
        </div>
        <a href="#" class="modal__close">Cerrar Modal</a>
    </div>
</section>


<div class="comentarios">
    @foreach(var item in ViewBag.Comentarios){
        <div class="comentario">
            <div class="perfil">
                <div>
                    <p>@item.ID_Usuario</p>
                </div>
                @if(item.ID_Usuario == ViewBag.Usuario.ID_Usuario){
                    <div>
                        <span class="material-symbols-outlined lapiz">edit</span>
                        <span class="material-symbols-outlined" style="margin-left: 5px; color: darkred;">delete</span>
                    </div>
                }
            </div>
            <div class="contenido">
                <p>@item.Contenido</p>
            </div>
        </div>
    }

    <form action='@Url.Action("PublicarMensaje")' method="post">
        <input type="text" name="contenido">
        <input type="hidden" name="id" value="@ViewBag.Usuario.ID_Usuario">
        <input type="hidden" name="idComunidad" value="@ViewBag.Comunidad.ID_Comunidad">
        <div>
            <input type="submit">
        </div>
    </form>
</div>

